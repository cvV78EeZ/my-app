<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="country-title-h2">日本のおすすめスポット登録</h2>
      <%= form_with(url: japan_create_path, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>

        <div class="form-group">
          <%= f.label "おすすめスポットを入力してね", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "説明文入力してね", class: 'form-label' %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="form-group image-upload">
          <%= f.label "画像の入力", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="" alt="Image Preview" class="image-preview__image">
            <span class="image-preview__default-text">Image will be displayed here</span>
          </div>
          <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <div class="button-group">
          <%= f.submit '送信する', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>