<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto post-form-container">
      <h2 class="h2">国の登録</h2>
      <%= form_with(url: create_countries_path, local: true, method: :post, html: { class: 'post-form' } ) do |f| %>
        <% if @post.errors.any? %>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %> </ul>
      <% end %>
        <div class="form-group">
          <%= f.label "国名を入力してね", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "説明文を入力してね", class: 'form-label' %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="form-group image-upload">
          <%= f.label "画像の入力", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="" alt="Image Preview" class="image-preview__image">
            <span class="image-preview__default-text">Image will be displayed here</span>
          </div>
          <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <div class="button-group">
          <%= f.submit '送信', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>